<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>User blogs</title>
</head>

<body>
  <%- include('./partials/nav.ejs') %>
  <% if ( locals.blogs.length > 0) { %>
    <div class="container mt-5">
      <div class="row row-cols-1 row-cols-md-3 g-4">
      <% locals.blogs.forEach((blog , ind)=> { %>
        <div class="col">
          <div class="card h-100">
            <img src="<%= blog.coverImage %>" style="width: 100%; height: 300px;" class="card-img-top" alt="Image">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.content %>.</p>
              <div style="display: flex;">
                <form class="d-flex" action="/blog/delete" method="post">
                  <input class="form-control me-2 btn btn-outline-success" style="width: 85px;" name="<%= blog._id %>" value="Delete" type="submit">
                </form>
                <form class="d-flex" action="/blog/blogUpdate-page" method="post" enctype="multipart/form-data">
                  <input class="form-control me-2 btn btn-outline-success" style="width: 85px;" name="<%= blog._id %>" value="Update" type="submit">
                </form>
              </div>
           </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <% } else { %>
    <div class="container mt-5">
      <div class="card text-center">
        <div class="card-body">
          <% if (locals.error) { %>
            <h5 class="card-title"><%= locals.error %></h5>
          <% } else { %>
          <h5 class="card-title">You have not added any blogs</h5>
          <p class="card-text">Go and add blogs.</p>
          <a href="/blog" class="btn btn-primary">Add Blog</a>
          <% } %>
        </div>
      </div>
    </div>
  <% } %>

  <%- include("./partials/script.ejs") %>
</body>

</html>